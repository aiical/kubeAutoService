---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ serviceName }}-zookeeper
  namespace: {{ namespace }}
  labels:
    account: {{ serviceName }}-zookeeper
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ serviceName }}-zookeeper
  namespace: {{ namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: {{ serviceName }}-zookeeper
  namespace: {{ namespace }}
