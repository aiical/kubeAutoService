apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-nfs-{{ name }}
  namespace: {{ namespace }}
  labels: # 这些labels可以不定义
    name: pvc-nfs-{{ name }}
    type: nfs
spec:
  accessModes:
  - ReadWriteMany
  - ReadWriteOnce
  - ReadOnlyMany
  storageClassName: sc-{{ serviceName }}
  resources:
    requests:
      storage: {{ size }}
  selector:
    matchLabels:
      name: pv-nfs-{{ name }}